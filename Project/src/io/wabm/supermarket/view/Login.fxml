<GridPane alignment="center" hgap="10" prefHeight="300.0" prefWidth="450.0" styleClass="root" vgap="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.wabm.supermarket.controller.LoginController">
  <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
     
     <Text id="welcome-text" text="超市管理系统" textAlignment="CENTER" wrappingWidth="299.03125" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS" />
     
     <Label prefHeight="35.0" prefWidth="66.0" text="用户名" GridPane.columnIndex="0" GridPane.rowIndex="1" />
     
     <TextField fx:id="usernameText" GridPane.columnIndex="1" GridPane.rowIndex="1" />
     
     <Label prefHeight="25.0" prefWidth="66.0" text="密码" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2" />
     
     <PasswordField fx:id="passwordText" GridPane.columnIndex="1" GridPane.rowIndex="2" />
     
     <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <children>
            <Button fx:id="loginButton" defaultButton="true" onAction="#Login" text="登录" />
        </children>
     </HBox>
     
     <Text GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
   </children>
</GridPane>
