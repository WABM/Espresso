<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.wabm.supermarket.controller.management.AddEmployeeController">
   <children>
      <VBox layoutX="121.0" layoutY="14.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <GridPane vgap="7.0">
              <columnConstraints>
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
               </padding>
               <children>
                  <Label text="姓名：" GridPane.rowIndex="1" />
                  <Label text="入职日期：" GridPane.rowIndex="4" />
                  <Label text="性别：" GridPane.rowIndex="2" />
                  <Label text="出生日期：" GridPane.rowIndex="3" />
                  <Label text="职位：" GridPane.rowIndex="5" />
                  <Label text="电话号码：" GridPane.rowIndex="6" />
                  <Label text="账号：" GridPane.rowIndex="7" />
                  <Label text="密码：" GridPane.rowIndex="8" />
                  <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <ComboBox fx:id="sexComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="birthTextField" promptText="必填" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="entryTextField" promptText="必填" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <ComboBox fx:id="departmentComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <TextField fx:id="phoneTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  <TextField fx:id="userTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                  <TextField fx:id="passwordTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
               </children>
            </GridPane>
            <HBox alignment="CENTER" nodeOrientation="RIGHT_TO_LEFT" spacing="14.0">
               <children>
                  <Button fx:id="comfirmButton" defaultButton="true" mnemonicParsing="false" onAction="#comfirmButtonPressed" text="添加" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#setCancelButtonpressed" text="取消" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
