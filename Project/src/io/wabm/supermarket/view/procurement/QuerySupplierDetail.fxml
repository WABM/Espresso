<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.wabm.supermarket.controller.procurement.QuerySupplyDetailController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="21.0" spacing="8.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <GridPane prefHeight="117.0" prefWidth="272.0" vgap="8.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="81.0" minWidth="28.0" prefWidth="74.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.0" minWidth="191.0" prefWidth="198.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                   <Label text="商品编号：" GridPane.rowIndex="1" />
                  <Label text="商品名称：" GridPane.rowIndex="2" />
                  <Label text="商品进价：" GridPane.rowIndex="3" />
                  <Label text="送达期限：" GridPane.rowIndex="4" />
                   <TextField fx:id="commodityIDTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="commodityNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="deliveryTimeTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               </children>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" cache="true" spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#setCancelButtonPressed" text="取消" />
                  <Button fx:id="comfirmButton" mnemonicParsing="false" onAction="#setComfirmButtonPressed" text="查找" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
