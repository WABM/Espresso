<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="578.0" prefWidth="669.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.wabm.supermarket.controller.sales.TransactionRecordDetailController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonPressed" text="返回" />
        </items>
      </ToolBar>
   </top>
   <center>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="recordID" prefWidth="75.0" text="账单号" />
          <TableColumn fx:id="commodityID" prefWidth="75.0" text="商品编号" />
            <TableColumn fx:id="barcode" prefWidth="75.0" text="条形码" />
            <TableColumn fx:id="name" prefWidth="75.0" text="商品名称" />
            <TableColumn fx:id="classificationID" prefWidth="75.0" text="类别" />
            <TableColumn fx:id="specification" prefWidth="75.0" text="规格" />
            <TableColumn fx:id="unit" prefWidth="75.0" text="单位" />
            <TableColumn fx:id="quantity" prefWidth="75.0" text="数量" />
            <TableColumn fx:id="price" prefWidth="75.0" text="价格" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
